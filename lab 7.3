let pinkColor = true;

function setup() {
  createCanvas(400, 400);
}

function draw() {
  background(220);
  noLoop();
  for (let i = 0; i < 5; i++) {
    for (let j = 0; j < 5; j++) {
      if (pinkColor) {
        fill(120 * i + 120, 40 * i + 40, 100 * i + 80);
      } else {
        fill(50 * i, 60 * i + 100, 0 * i + 100);
      }

      drawSquare(80 * i, 80 * j, 1);
    }
  }
}

function drawSquare(x, y, size) {
  push();
  translate(x, y);
  scale(size);
  rect(0, 0, 80);
  pop();
}

function mousePressed() {
  pinkColor = !pinkColor;
  redraw();
}
